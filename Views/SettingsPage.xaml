<Page x:Class="Note.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Note.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" 
      d:DesignWidth="800"
      Title="SettingsPage"
      Loaded="Page_Loaded">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Button Content="Rename Account"
                    Width="150"
                    Height="23" 
                    Click="renameAccountButtonClick">
            </Button>
            <Button Content="Change Password"
                    Width="150"
                    Height="23" 
                    Click="changePasswordButtonClick">
            </Button>
            <Button Content="Delete Account"
                    Width="150"
                    Height="23" 
                    Click="deleteAccountButtonClick">
            </Button>
            <Button Content="Log Out"
                    Width="150"
                    Height="23" 
                    Click="logoutButtonClick">
            </Button>
        </StackPanel>
    </Grid>
</Page>