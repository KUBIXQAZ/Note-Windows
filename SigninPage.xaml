<Page x:Class="Note.SigninPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Note"
      mc:Ignorable="d" 
      d:DesignHeight="470" d:DesignWidth="800"
      Title="SigninPage">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ResourceDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid Background="#FF050110">
        <StackPanel Grid.Row="1"
                    VerticalAlignment="Center">
            <TextBlock Text="SIGN IN"
                       Foreground="#a598d6"
                   FontSize="50px"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 10px"></TextBlock>
            <TextBlock Text="Username"
                       Foreground="#a598d6"
                       Width="150px"></TextBlock>
            <TextBox Width="150px"
                     Height="23px" 
                     Margin="0 0 0 10px"
                     BorderThickness="0 0 0 2px"
                     Foreground="#a598d6"
                     BorderBrush="#0b0429"
                     Background="Transparent"
                     ></TextBox>
            <TextBlock Text="Password"
                       Foreground="#a598d6"
                       Width="150px"></TextBlock>
            <TextBox Width="150px"
                     Height="23px"
                     Foreground="#a598d6"
                     Margin="0 0 0 10px"
                     BorderThickness="0 0 0 2px"
                     BorderBrush="#0b0429"
                     Background="Transparent"></TextBox>
            <TextBlock Text="Confirm Password"
                       Foreground="#a598d6"
                       Width="150px"></TextBlock>
            <TextBox Width="150px"
                     Height="23px"
                     Foreground="#a598d6"
                     Margin="0 0 0 10px"
                     BorderThickness="0 0 0 2px"
                     BorderBrush="#0b0429"
                     Background="Transparent"></TextBox>
            <Button Content="Sign in"
                    Width="150px"
                    Foreground="#a598d6"
                    Background="#0b0429"
                    Height="23px"></Button>
        </StackPanel>
    </Grid>
</Page>
